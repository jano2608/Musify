<br>
<div class="container">
<div class="card text-center">
<h1> Playlist</h1>
<h2>
  <strong>Name:</strong>
  <%= @playlist.name %>
</h2>

<h2>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</h2>
</div>
  <div class="row">
    <div class="column col-sm-6 text-center">
      <br>
      <div class="card">
<h2> Add Song</h2>
<%= form_with model: Song.new, url: playlist_songs_path(@playlist)  ,local:true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <br>
  <%= f.label :artist %>
  <%= f.text_field :artist%>
  <br>
  <br>
  <%= f.submit 'Add Song', class: 'btn btn-success' %>
<% end %>
        <br>
      </div>
    </div>

    <div class="column col-sm-6 text-center">
      <br>
      <div class="card">
<h2> Songs </h2>

  <% @playlist.songs.each do |song| %>
    <div class="card">
    <p>Name = <%= song.name %> <br> Artist = <%= song.artist %> <%= link_to 'Delete', playlist_song_path(@playlist, song) , method: :delete, data: {confirm: 'Are you sure you want to delete this song?'}%></p>
    </div>
  <% end %>
      </div>
    </div>
  </div>
  <br>
<%= link_to 'Edit', edit_playlist_path(@playlist), class: 'btn btn-warning col-sm-4 float-right' %>
<%= link_to 'Back', playlists_path, class: 'btn btn-success col-sm-4 float-left' %>
</div>
