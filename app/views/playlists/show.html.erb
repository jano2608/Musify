<p id="notice"><%= notice %></p>

<h1> Playlist</h1>
<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>
<h2> Add Song</h2>
<%= form_with model: Song.new, url: playlist_songs_path(@playlist)  ,local:true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>

  <%= f.label :artist %>
  <%= f.text_field :artist%>
  <br>
  <br>
  <%= f.submit %>
<% end %>

<h2> Songs </h2>
<ul>
  <% @playlist.songs.each do |song| %>
    <li><%= song.name %> / <%= song.artist %> <%= link_to 'Delete', playlist_song_path(@playlist, song) , method: :delete, data: {confirm: 'Are you sure you want to delete this song?'}%></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
